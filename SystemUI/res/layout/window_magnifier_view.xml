    <ImageView android:layout_gravity="center|right|top" android:id="@id/top_right_corner" android:paddingTop="@dimen/magnifier_drag_handle_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/sec_magnification_inner_border_margin" android:src="@drawable/ic_magnification_corner_right" android:scaleType="center" android:paddingEnd="@dimen/magnifier_drag_handle_padding" android:accessibilityTraversalAfter="@id/top_left_corner" />
    <ImageView android:layout_gravity="center|left|top" android:id="@id/top_left_corner" android:paddingTop="@dimen/magnifier_drag_handle_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/sec_magnification_inner_border_margin" android:src="@drawable/ic_magnification_corner_left" android:scaleType="center" android:paddingStart="@dimen/magnifier_drag_handle_padding" android:accessibilityTraversalAfter="@id/bottom_handle" />
    <ImageView android:layout_gravity="bottom|center|right" android:id="@id/bottom_right_corner" android:paddingBottom="@dimen/magnifier_drag_handle_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/sec_magnification_inner_border_margin" android:src="@drawable/ic_magnification_corner_left" android:scaleType="center" android:paddingEnd="@dimen/magnifier_drag_handle_padding" android:accessibilityTraversalAfter="@id/top_right_corner" />
    <ImageView android:layout_gravity="bottom|center|left" android:id="@id/bottom_left_corner" android:paddingBottom="@dimen/magnifier_drag_handle_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/sec_magnification_inner_border_margin" android:src="@drawable/ic_magnification_corner_right" android:scaleType="center" android:paddingStart="@dimen/magnifier_drag_handle_padding" android:accessibilityTraversalAfter="@id/bottom_right_corner" />
    <ImageView android:layout_gravity="bottom|center|right" android:id="@id/drag_handle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/magnification_mirror_surface_margin" android:src="@drawable/ic_move_setting_magnification" android:scaleType="center" />
    <ImageView android:layout_gravity="bottom|center|right" android:id="@id/close_button" android:background="@drawable/accessibility_magnification_close_button_background" android:focusable="true" android:visibility="gone" android:layout_width="@dimen/magnification_close_button_size" android:layout_height="@dimen/magnification_close_button_size" android:layout_margin="@dimen/magnification_close_button_margin" android:src="@drawable/ic_magnification_menu_close" android:scaleType="center" android:tint="@color/accessibility_full_magnifier_button_icon_color" android:tintMode="src_atop" />
</FrameLayout>
