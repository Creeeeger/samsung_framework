<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <View android:id="@id/magnification_inner_border" android:background="@drawable/accessibility_window_magnification_background" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="@dimen/magnification_outer_border_margin" />
